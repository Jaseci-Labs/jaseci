[flake8]
exclude = fixtures, __jac_gen__, build, examples, venv, vendor, generated
plugins = flake8_import_order, flake8_comprehensions, flake8_bugbear, flake8_annotations, pep8_naming, flake8_simplify
max-line-length = 120
ignore = E203, W503, ANN101, ANN102

per-file-ignores =
    jac/jaclang/compiler/unitree.py:D102,D105,D107
    jac/jaclang/compiler/constant.py:D102,D105,D107
    jac/jaclang/compiler/codeloc.py:D102,D105,D107
    jac/jaclang/compiler/passes/main/pybc_gen_pass.py:D102,D105,D107
    jac/jaclang/compiler/passes/main/access_modifier_pass.py:D102,D105,D107
    jac/jaclang/compiler/passes/main/def_impl_match_pass.py:D102,D105,D107
